<div class="container">
	{if $error_message}
		<div class="alert alert-error">
			<button type="button" class="close" data-dismiss="alert">&times;</button>
		  	<strong>Ошибка!</strong> {$error_message}
		</div>
	{/if}
	<form class="form-signin" method="POST">
		<h2 class="form-signin-heading">Вход на сайт</h2>
		<input name="login" type="text" class="input-block-level" placeholder="Логин">
		<input name="pass" type="password" class="input-block-level" placeholder="Пароль">
		<button class="btn btn-large" type="submit">Войти</button>
	</form>
</div> 